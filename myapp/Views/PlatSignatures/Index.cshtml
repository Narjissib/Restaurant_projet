@model IEnumerable<myapp.Models.PlatSignature>

@{
    ViewData["Title"] = "Index";
}
<style>
    .btn-custom {
        background-color: black !important;
        border-color: beige;
    }

    .btn-primary-custom {
        background-color: grey !important;
        border-color: beige;
    }
</style>

<h2>Liste des Plats Signatures</h2>

<p>
    <a asp-action="Create">
        <button class="btn btn-success btn-custom">
            <span class="glyphicon glyphicon-plus" style="background-color:black !important"></span> Ajouter un Plat
        </button>
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nom du Plat</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plat in Model)
        {
            <tr>
                <td>@plat.Nom</td>
                <td>@plat.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@plat.Id">
                        <button class="btn btn-primary btn-primary-custom">
                            <span class="glyphicon glyphicon-edit" style="background-color:grey !important"></span> Modifier
                        </button>
                    </a>
                    <a asp-action="Delete" asp-route-id="@plat.Id">
                        <button class="btn btn-primary btn-primary-custom">
                            <span class="glyphicon glyphicon-trash" style="background-color:grey !important"></span> Supprimer
                        </button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
