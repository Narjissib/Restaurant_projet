@model IEnumerable<myapp.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<style>
    .btn-dark {
        background-color: black;
    }

    html, body {
        margin: 0;
    }

    #main-content {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: space-around;
        padding: 20px;
    }

    .custom-card {
        margin-right: 20px;
        flex: 1 1 200px;
        max-width: 500px;
    }

    main {
        flex: 1;
        padding-bottom: 45px;
    }
</style>

<h1>Catégories</h1>

<div id="main-content" class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4 custom-card">
            <div class="card d-flex h-100" style="width:300px;height:250px;">
                <img src="~/images/@item.ImgUrl" class="card-img-top img-fluid custom-img" alt="@item.Nom" style="width: 100%;height: 250px; ">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Nom</h5>
                    <a asp-action="Details" asp-route-id="@item.CategorieId" class="btn btn-dark mt-auto">Details</a>
                </div>

                <!-- Ajoutez votre bouton ici -->
                <div class="mt-2">
                    <a class="btn btn-light mt-auto" href="@Url.Action("Consulter", "Plats", new { categorieId = item.CategorieId })">Consulter</a>
                </div>
            </div>

            <!-- Ajoutez chaque bouton "Consulter" ici -->

        </div>
    }
</div>

